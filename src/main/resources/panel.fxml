<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXButton?>
<?import com.jfoenix.controls.JFXTreeTableView?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.canvas.Canvas?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/8.0.121" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.PanelController">
   <children>
      <BorderPane prefHeight="400.0" prefWidth="600.0">
         <right>
            <VBox prefHeight="400.0" prefWidth="150.0" styleClass="rightSideBar" BorderPane.alignment="TOP_CENTER">
               <children>
                  <JFXTreeTableView />
                  <JFXButton fx:id="drawFinished" mnemonicParsing="false" onMouseClicked="#finishDraw" styleClass="rightButton" text="完成绘制">
                     <VBox.margin>
                        <Insets bottom="20.0" left="45.0" top="20.0" />
                     </VBox.margin>
                  </JFXButton>
               </children>
            </VBox>
         </right>
         <center>
            <AnchorPane prefHeight="400.0" prefWidth="450.0" BorderPane.alignment="CENTER">
               <children>
                  <Canvas fx:id="canvas" height="400.0" onMouseDragged="#keepDraw" onMousePressed="#startDraw" onMouseReleased="#endDraw" width="450.0" />
               </children>
            </AnchorPane>
         </center>
      </BorderPane>
   </children>
</AnchorPane>
